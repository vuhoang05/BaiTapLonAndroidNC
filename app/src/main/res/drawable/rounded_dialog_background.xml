<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền của Dialog -->
    <solid android:color="#99FFFF" />

    <!-- Bo góc cho Dialog -->
    <corners android:radius="16dp" />

    <!-- Tạo viền cho Dialog (không bắt buộc) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Đổ bóng cho Dialog (không bắt buộc) -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
